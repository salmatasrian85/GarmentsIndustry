<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainpkg.garmentsindustry.GMMainDashboardFxml">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutY="60.0" prefHeight="58.0" prefWidth="900.0" style="-fx-background-color: #292f32;" text="General Member Dashboard" textFill="#ecf0f1">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <HBox layoutX="50.0" layoutY="140.0" prefHeight="400.0" prefWidth="800.0" spacing="50.0">
            <children>
                <VBox prefHeight="400.0" prefWidth="300.0" spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 20;">
                    <children>
                        <Button mnemonicParsing="false" onAction="#membershipRenewalButtonOA" prefHeight="45.0" prefWidth="260.0" style="-fx-background-color: #978780 #78ba85;" text="Membership Renewal" textFill="#6b3434">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>

                        </Button>
                        <Button mnemonicParsing="false" onAction="#healthProgramsButtonOA" prefHeight="45.0" prefWidth="260.0" style="-fx-background-color: #c597a8;" text="Health Programs" textFill="#6b3434">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#suggestProgramButtonOA" prefHeight="45.0" prefWidth="260.0" style="-fx-background-color: #847b #ba9078d1;" text="Create New Training Program" textFill="#6b3434">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#voteElectionButtonOA" prefHeight="45.0" prefWidth="260.0" style="-fx-background-color: #ba9078;" text="Vote in Election" textFill="#6b3434">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#donateToFundButtonOA" prefHeight="45.0" prefWidth="260.0" style="-fx-background-color: #bad4e6;" text="Donate to Welfare Fund" textFill="#6b3434">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#viewReportsButtonOA" prefHeight="45.0" prefWidth="260.0" style="-fx-background-color: #e #ba90781a4bb;" text="View Financial Reports" textFill="#6b3434">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#volunteerEventButtonOA" prefHeight="45.0" prefWidth="260.0" style="-fx-background-color: #a8e3 #ba9078d9;" text="Volunteer for Events" textFill="#6b3434">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#myActivityButtonOA" prefHeight="45.0" prefWidth="260.0" style="-fx-background-color: #e3c084;" text="My Activity" textFill="#6b3434">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>
                <AnchorPane prefHeight="400.0" prefWidth="450.0" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10; -fx-padding: 20;">
                    <children>
                        <Label layoutX="20.0" layoutY="20.0" style="-fx-font-weight: bold;" text="Welcome to General Member Dashboard">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                        <Label layoutX="20.0" layoutY="60.0" prefWidth="410.0" text="Please select an option from the left menu to manage your membership, participate in association activities, or access welfare programs." wrapText="true" />
                        <Button layoutX="300.0" layoutY="330.0" mnemonicParsing="false" onAction="#backToUserSelectionButtonOA" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: gray;" text="Back to All Users" textFill="WHITE" />
                    </children>
                </AnchorPane>
            </children>
        </HBox>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="80.0" prefWidth="900.0" style="-fx-background-color: #292f32;" text="Bangladesh Garment Workers Welfare Association" textFill="WHITE">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
